{
  "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*",
              "src/types/*"
          ]
      },
      "rootDirs": ["src"],
      "lib": ["es2020"],
      "target": "es2020",
      "module": "esnext",
      "esModuleInterop": true,
      "types": ["node"]
  },
  "include": [
      "src/**/*"
  ]
}